<!doctype html>
<style>
    @import url("https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@500&display=swap");
    @import url('https://fonts.googleapis.com/css2?family=Merriweather&display=swap');
</style>

<title>{% block title %}{% endblock %} - Экспериментальные проекты</title>

<link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='style.css') }}">

<nav>
  <h1><a href="{{ url_for('view_projects') }}">Просмотр проектов</a></h1>
  <ul>
      <li><a href="{{ url_for('import_application') }}" class="link">Добавление заявки</a>
      <li><a href="{{ url_for('search_projects') }}" class="link">Поиск</a>
  </ul>
</nav>

<hr>

<section class="content">
  <header>
    {% block header %}{% endblock %}
  </header>
  {% for message in get_flashed_messages() %}
    <div class="flash">{{ message }}</div>
  {% endfor %}
  <nav>
      {% block buttons %}{% endblock %}
  </nav>
  {% block content %}{% endblock %}
</section>

<script src="../static/javascript.js"></script>