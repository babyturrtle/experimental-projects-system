{% extends 'base.jinja2' %}

{% block header %}
    <h1>{% block title %}Учреждения образования{% endblock %}</h1>
{% endblock %}

{% block content %}
    <ul class="word">
        {% for school in schools %}
            <li><a href="{{ url_for('view_school', school_id=school.id) }}" class="link">{{ school.name }}</a></li>
        {% endfor %}
    </ul>
{% endblock %}